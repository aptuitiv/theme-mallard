{
    "groups": [
        {
            "name": "Breadcrumb",
            "fields": [
                {
                    "name": "showBreadcrumb",
                    "label": "Show Breadcrumb Text",
                    "type": "radio",
                    "options": {
                        "yes": "Yes",
                        "no": "No"
                    },
                    "default": "yes"
                }
            ]
        },
        {
            "name": "Social Icons",
            "description": "Set the links and icons to use for your social networks in the footer of each page.",
            "fields": [
                {
                    "name": "social",
                    "label": "Social Networks",
                    "type": "repeating",
                    "itemName": "Social Network",
                    "children": [
                        {
                            "name": "name",
                            "label": "Social network name",
                            "type": "text"
                        },
                        {
                            "name": "url",
                            "label": "URL to your page on this social network",
                            "type": "text"
                        },
                        {
                            "name": "icon",
                            "label": "Icon",
                            "type": "select",
                            "options": {
                                "facebook": "Facebook",
                                "instagram": "Instagram",
                                "linkedin": "LinkedIn",
                                "pinterest": "Pinterest",
                                "twitter": "Twitter",
                                "youtube": "YouTube"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Header",
            "description": "Content for the header that is used on all pages",
            "fields": [
                {
                    "name": "headerShowAddress",
                    "label": "Show Address",
                    "type": "radio",
                    "options": {
                        "yes": "Yes",
                        "no": "No"
                    },
                    "default": "yes"
                },
                {
                    "name": "headerShowPhone",
                    "label": "Show Phone Number",
                    "type": "radio",
                    "options": {
                        "yes": "Yes",
                        "no": "No"
                    },
                    "default": "yes"
                },
                {
                    "name": "headerShowEmail",
                    "label": "Show Email",
                    "type": "radio",
                    "options": {
                        "yes": "Yes",
                        "no": "No"
                    },
                    "default": "yes"
                },
                {
                    "name": "headerShowSocial",
                    "label": "Show Social",
                    "type": "radio",
                    "options": {
                        "yes": "Yes",
                        "no": "No"
                    },
                    "default": "yes"
                },
                {
                    "name": "headerLogo",
                    "label": "Logo",
                    "type": "image",
                    "path": "images",
                    "default": "/theme/custom/images/logo.svg",
                    "preview": {
                        "type": "replace",
                        "contentSelector": ".Header-logo",
                        "template": "<img src=\"{{ url }}\" height=\"{{ imageHeight }}\" width=\"{{ imageWidth }}\" alt=\"{{ alt }}\" class=\"Header-logo\">"
                    }
                }
            ]
        },
        {
            "name": "Footer",
            "description": "Content for the footer that is used on all pages",
            "fields": [
                {
                    "name": "footerShowNavigation",
                    "label": "Show Navigation",
                    "type": "radio",
                    "options": {
                        "yes": "Yes",
                        "no": "No"
                    },
                    "default": "yes"
                },
                {
                    "name": "footerShowAddress",
                    "label": "Show Address",
                    "type": "radio",
                    "options": {
                        "yes": "Yes",
                        "no": "No"
                    },
                    "default": "yes"
                },
                {
                    "name": "footerShowPhone",
                    "label": "Show Phone Number",
                    "type": "radio",
                    "options": {
                        "yes": "Yes",
                        "no": "No"
                    },
                    "default": "yes"
                },
                {
                    "name": "footerShowEmail",
                    "label": "Show Email",
                    "type": "radio",
                    "options": {
                        "yes": "Yes",
                        "no": "No"
                    },
                    "default": "yes"
                }
            ]
        }
    ]
}