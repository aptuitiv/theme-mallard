{% if image and content %}
    {% set imageCol = 'col-1-1 col-1-2-lg' %}
    {% set contentCol = 'col-1-1 col-1-2-lg' %}
    {% if imageSize == 'Third' %}
        {% set imageCol = 'col-1-1 col-1-2-md col-1-3-lg' %}
        {% set contentCol = 'col-1-1 col-1-2-md col-2-3-lg' %}
    {% elseif imageSize == 'Quarter' %}
        {% set imageCol = 'col-1-1 col-1-2-md col-1-4-lg' %}
        {% set contentCol = 'col-1-1 col-1-2-md col-3-4-lg' %}
    {% endif %}
    {% set contentWrapper = '' %}
        {% set contentWrapper = contentWrapper ~ 'flex align-center h-100' %}
        {% if imagePosition == 'Right' %}
            {% set contentWrapper = contentWrapper ~ ' pe-2 pe-5-lg' %}
            {% set imageCol = imageCol ~ ' order-2-lg' %}
            {% set contentCol = contentCol ~ ' order-1-lg' %}
        {% else %}
            {% set contentWrapper = contentWrapper ~ ' ps-2 ps-5-lg' %}
        {% endif %}
    {% if image %}
    {% endif %}
    <div class="Container Container--pad">
        <div class="grid py-2 py-4-lg">
            <div class="{{ imageCol }}">
                {% do image.resize(800) %}
                {% do image.lazy() %}
                {% set image.class = "w-100" %}
                <div class="flex align-center h-100">
                    {{ image.tag }}
                </div>
            </div>
            <div class="{{ contentCol }}">
                <div class="{{ contentWrapper }}">
                    <div class="clearfix first-child-st-0 last-child-sb-0">{{ content }}</div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
