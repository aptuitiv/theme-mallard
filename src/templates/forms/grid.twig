{% import 'macros/form-macros.twig' as macros %}

{{ macros.formSuccessMessage(form) }}

{% set form.class = 'js-form' ~ random_string() %}
{{ form.openTag }}
    {{ macros.formErrorContainer(form) }}
    {{ macros.buildGridFormFields(form) }}
    {{ macros.captcha(form) }}
    
    <div class="grid g-2 mb-2">
        <div class="u-size3of4 u-md-sizeFull u-push1of4 u-md-pushNone">
            <p class="mb-1"><em>* Required Fields</em></p>
            <p><button type="submit" class="Button Button--lg u-sm-sizeFull">{{ form.submitButtonText }}</button></p>
        </div>
    </div>
{{ form.closeTag }}

{{ macros.formValidateHandlerJs(form, errorContainerId) }}
