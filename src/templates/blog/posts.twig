{% extends 'two-column-right-sidebar' %}

{% block banner %}
    {% set blogHeading = _core.theme.settings.blogMainPageBannerHeading|default('Blog') %}
    {% if pagination.current > 1 %}
        {% set content = '<h1 class="flex flex-col align-center g-1">' ~ blogHeading ~ '<span class="h3 m-0">Page ' ~ pagination.current ~ '</span></h1>' %}
    {% else %}
        {% set heading = blogHeading %}
    {% endif %}
    {% if _core.theme.settings.blogMainPageBannerImage %}
        {% set image = _core.theme.settings.blogMainPageBannerImage %}
    {% endif %}
    {% include('content-builder/banner') %}
{% endblock %}

{% block main %}
    {% if posts %}
        {% for post in posts %}
            {% include 'blog/post-list-item-simple' %}
        {% endfor %}
        {% include 'snippets/pagination' %}
    {% endif %}

{% endblock %}

{% block sidebar %}
    {% include 'blog/sidebar' %}
{% endblock %}
