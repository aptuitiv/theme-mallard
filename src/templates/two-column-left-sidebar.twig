{%  include 'snippets/header' %}
{% block banner %}
    {{ _page.content('banner') }}
{% endblock %}
<div class="Container">
    <div class="Content clearfix">
        {% if _core.theme.settings.showBreadcrumb == "yes" and _page.isHome == false %}
            {{ _page.breadcrumb() }}
        {% endif %}
        <div class="grid g-4">
            <div class="u-size3of4 u-push1of4 u-lg-size2of3 u-lg-push1of3 u-sm-sizeFull u-sm-pushNone">
                {% block main %}<main id="main">{{ _page.content() }}</main>{% endblock %}
            </div>
            <div class="u-size1of4 u-pull3of4 u-lg-size1of3 u-lg-pull2of3 u-sm-sizeFull u-sm-pullNone">
                <aside>{{ _api.navigation.getSubNavigationByUrl.key('main').getParentItem('yes').showSubNav('yes').template('sidebar') }}</aside>
            </div>
        </div>
    </div>
</div>
{% include 'snippets/footer' %}
