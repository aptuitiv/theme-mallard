<footer class="Footer">
    <div class="Container Container--pad">
        {% if _core.theme.settings.footerShowNavigation == 'yes' %}
            {{ _api.navigation.get.key('main').showSubNav('no').template('footer') }}
        {% endif %}
        {% if _core.theme.settings.footerShowAddress == 'yes' or _core.theme.settings.footerShowPhone == 'yes' or _core.theme.settings.footerShowEmail == 'yes' %}
            <div class="Footer-contact" itemscope itemtype="http://schema.org/Organization">
                {% if _core.theme.settings.footerShowAddress == 'yes' %}
                    <span itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                        {% if _core.theme.settings.address %}
                            <span itemprop="streetAddress">{{ _core.theme.settings.address }}</span> /
                        {% endif %}
                        {% if _core.theme.settings.city %}
                            <span itemprop="addressLocality">{{ _core.theme.settings.city }}</span>{% if _core.theme.settings.state %}, {% endif %}
                        {% endif %}
                        {% if _core.theme.settings.state %}
                            <span itemprop="addressRegion">{{ _core.theme.settings.state }} </span>
                        {% endif %}
                        {% if _core.theme.settings.zip %}
                            <span itemprop="postalCode">{{ _core.theme.settings.zip }}</span>
                        {% endif %}
                    </span>
                {% endif %}
                {% if _core.theme.settings.footerShowPhone == 'yes' and _core.theme.settings.phone|length > 0 %}
                    {% if _core.theme.settings.footerShowAddress == 'yes' %}
                        /
                    {% endif %}
                    <span itemprop="telephone"><a href="tel:{{ _core.theme.settings.phone|replace({'(': '', '}': '', '-': '', ' ': ''}) }}" aria-label="Call {{ _core.theme.settings.phone }}">{{ _core.theme.settings.phone }}</a></span>
                {% endif %}
                {% if _core.theme.settings.footerShowEmail == 'yes' and _core.theme.settings.email|length > 0 %}
                    {% if _core.theme.settings.footerShowAddress == 'yes' or _core.theme.settings.footerShowPhone == 'yes' %}
                        /
                    {% endif %}
                    <a href="mailto:{{ _core.theme.settings.email }}" itemprop="email" title="Email {{ _core.theme.settings.email }}" class="u-linkSubtle">{{ _core.theme.settings.email }}</a>
                {% endif %}
            </div>
        {% endif %}
        &copy; {{ _core.date.year }} {{ _core.theme.settings.company }}
    </div>
</footer>

{{ _page.js() }}
<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
<script>
    WebFont.load({
        google: {
            families: ['Open+Sans:300,400,400i,700,700i', 'Asap+Condensed:600']
        }
    });
</script>
{{ _page.bodyEndCode() }}
</body>
</html>
